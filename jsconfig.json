{
  "compilerOptions": {
    "baseUrl": ".", // all paths are relative to the baseUrl
    "target": "ES6",
    "moduleResolution": "node",
    "paths": {
      "lib/*": [
        "./lib/*"
      ],
      "css/*": [
        "./css/*"
      ],
      "static/*": [
        "./static/*"
      ],
      "shared/*": [
        "./components/shared/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "stylesheets/*": [
        "./stylesheets/*"
      ],
      "components/*": [
        "./components/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    ".tmp",
    "build",
    ".next"
  ]
}